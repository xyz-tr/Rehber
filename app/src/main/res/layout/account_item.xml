<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_marginTop="0.5dp"
   app:cardCornerRadius="0dp"
   app:cardElevation="0dp"
   app:contentPadding="0dp"
   android:background="@color/light_background">
   
   <RelativeLayout
      android:id="@+id/mainRelativeLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:focusable="true"
      android:paddingTop="@dimen/dimen_8dp"
      android:paddingBottom="@dimen/dimen_8dp">
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginStart="16dp">
         
         <TextView
            android:id="@+id/accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/madelena"
            android:maxLines="1"
            android:textSize="22sp"
            android:textColor="@color/first_text_color"
            tools:text="Hesap ismi" />
         
         <TextView
            android:id="@+id/accountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="hesap türü"
            android:layout_below="@id/accountName"
            android:fontFamily="@font/madelena"
            android:maxLines="1" 
            android:textSize="14sp" />
      </RelativeLayout>
      
      <TextView
         android:id="@+id/contactCount"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginEnd="16dp"
         android:layout_toStartOf="@id/seleted"
         android:fontFamily="@font/texb"
         android:textSize="18sp"
         tools:text="125" />
      
      <ImageView
         android:id="@+id/seleted"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_alignParentEnd="true"
         android:layout_centerVertical="true"
         android:visibility="invisible"
         app:srcCompat="@drawable/dot_active" />
   
   </RelativeLayout>

</RelativeLayout>