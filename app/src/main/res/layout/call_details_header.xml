<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/headerBackground"
   android:background="@color/colorPrimary"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:gravity="center">
   
   <androidx.cardview.widget.CardView
      android:foregroundGravity="center"
      android:id="@+id/imageCard"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="8dp"
      app:cardCornerRadius="35dp"
      app:cardElevation="10dp"
      app:contentPadding="0dp">
      
      <ImageView
         android:id="@+id/type"
         android:layout_width="match_parent"
         android:layout_height="match_parent" />

   </androidx.cardview.widget.CardView>
   
   <com.tr.hsyn.telefonrehberi.util.ui.htext.evaporate.EvaporateTextView
      android:id="@+id/callTypeStr"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/imageCard"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="4dp"
      android:fontFamily="@font/nunito_extrabold"
      android:textColor="@color/white"
      android:textSize="19sp"
      tools:text="Giden Arama" />
   
   <com.tr.hsyn.telefonrehberi.util.ui.htext.evaporate.EvaporateTextView
      android:id="@+id/number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/callTypeStr"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="4dp"
      android:fontFamily="@font/acarisans_regular"
      android:textColor="@color/white"
      android:textSize="16sp"
      tools:text="05434937530" />

</RelativeLayout>