<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:background="@color/light_background"
   android:translationZ="1dp"
   android:layout_marginBottom="1dp"
   android:visibility="gone"
   tools:visibility="visible"
   android:id="@+id/call_summary_header_container">
   
   <RelativeLayout
      android:clickable="true"
      android:focusable="true"
      android:id="@+id/call_summary_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="6dp"
      android:paddingTop="6dp"
      android:background="@color/light_background">
      
      <ImageView
         android:layout_centerVertical="true"
         android:layout_marginStart="@dimen/dimen_16dp"
         android:id="@+id/call_summary_icon"
         android:layout_width="27dp"
         android:layout_height="27dp"
         android:tint="@color/alev"
         android:src="@drawable/call_summary"
         android:layout_gravity="center_vertical" />
      
      <TextView
         android:layout_toEndOf="@id/call_summary_icon"
         android:textColor="@color/contact_details_secondary_text_color"
         android:fontFamily="@font/rawen"
         android:layout_gravity="center_vertical"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Arama Ã–zeti"
         android:textSize="18dp"
         android:layout_centerVertical="true"
         android:layout_marginStart="@dimen/activity_horizontal_margin"
         tools:ignore="HardcodedText,SpUsage" />
      
      <ImageView
         android:id="@+id/expand_indicator"
         android:layout_width="12dp"
         android:layout_height="12dp"
         android:src="@drawable/down_indicator"
         android:layout_alignParentEnd="true"
         android:layout_marginEnd="@dimen/dimen_16dp"
         android:layout_centerVertical="true" />
   
   </RelativeLayout>
</LinearLayout>
