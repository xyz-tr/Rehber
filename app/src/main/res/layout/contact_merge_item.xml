<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:padding="@dimen/dimen_8dp"
   tools:ignore="HardcodedText,SpUsage, ContentDescription">
   
   <androidx.cardview.widget.CardView
      android:id="@+id/iconCard"
      android:layout_width="@dimen/contact_merge_item_icon_size"
      android:layout_height="@dimen/contact_merge_item_icon_size"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginStart="@dimen/dimen_16dp"
      android:layout_marginEnd="@dimen/dimen_16dp"
      app:cardCornerRadius="13dp"
      android:elevation="3dp">
      
      <ImageView
         android:id="@+id/icon"
         android:layout_width="match_parent"
         android:layout_height="match_parent" />
   
   </androidx.cardview.widget.CardView>
   
   <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@id/iconCard"
      android:fontFamily="@font/nunito_regular"
      android:text="Ä°sim"
      android:textSize="@dimen/dimen_16dp" />
   
   <TextView
      android:id="@+id/account"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/name"
      android:layout_toEndOf="@id/iconCard"
      android:fontFamily="@font/nunito_regular"
      android:text="Hesap ismi"
      android:textColor="#A12E2E2E"
      android:textSize="14dp" />

</RelativeLayout>