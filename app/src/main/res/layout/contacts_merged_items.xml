<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   xmlns:tools="http://schemas.android.com/tools"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   tools:ignore="RtlSymmetry,SpUsage,HardcodedText,ContentDescription"
   app:cardElevation="8dp"
   android:layout_marginBottom="@dimen/dimen_16dp"
   android:layout_marginStart="@dimen/dimen_16dp"
   android:layout_marginEnd="@dimen/dimen_16dp">
   
   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      
      <RelativeLayout
         android:elevation="1dp"
         android:id="@+id/header"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingTop="2dp"
         android:paddingBottom="2dp"
         android:paddingStart="@dimen/activity_horizontal_margin">
         
         <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/callb"
            android:text="Numara"
            android:textSize="@dimen/dimen_16dp" />
   
         <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:checked="true"
            android:textColor="@color/white" />
         
         <ImageView
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/mergeIcon"
            android:tint="@color/c_black_olive"
            android:src="@drawable/ring_separate"
            android:layout_toStartOf="@id/check"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true" />
      
      </RelativeLayout>
      
      <LinearLayout
         android:layout_marginStart="18dp"
         android:layout_below="@id/header"
         android:id="@+id/mergeContactsContainer"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         
         <!--<include layout="@layout/contact_merge_item"/>-->
      
      </LinearLayout>
   </RelativeLayout>

</androidx.cardview.widget.CardView>