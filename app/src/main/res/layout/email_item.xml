<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="50dp"
   android:clickable="true"
   android:focusable="true"
   android:background="@drawable/ripple_gri"
   android:id="@+id/email_item_layout">
   
   <ImageView
      android:id="@+id/email_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/email"
      android:layout_marginStart="@dimen/dimen_16dp"
      android:layout_marginTop="8dp" />
   
   <LinearLayout
      android:id="@+id/email_container"
      android:layout_toEndOf="@id/email_icon"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:orientation="vertical"
      android:layout_marginStart="@dimen/dimen_16dp">
   
      <TextView
         android:id="@+id/email"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="@font/rawen"
         android:text="xyz@gmail.com"
         android:textColor="@color/contact_details_secondary_text_color"
         android:textSize="18sp" />
   
      <TextView
         android:id="@+id/email_type"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="@font/rawen"
         android:text="email type"
         android:textColor="@color/grey_800"
         android:textSize="12sp" />
   </LinearLayout>
</RelativeLayout>