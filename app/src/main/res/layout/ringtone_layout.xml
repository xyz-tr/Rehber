<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:background="@color/light_background"
   android:id="@+id/change_ringtone_container"
   android:visibility="gone"
   tools:visibility="visible">
   
   <RelativeLayout
      android:id="@+id/change_ringtone"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:clickable="true"
      android:focusable="true">
      
      <ImageView
         android:id="@+id/ringtoneIcon"
         app:srcCompat="@drawable/ringtone_icon"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_centerVertical="true"
         android:layout_marginStart="@dimen/activity_horizontal_margin" />
      
      <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginStart="20dp"
         android:layout_toEndOf="@id/ringtoneIcon"
         android:orientation="vertical">
   
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rawen"
            android:text="Zil Sesi"
            android:textColor="@color/contact_details_secondary_text_color"
            android:textSize="18sp" />
   
         <TextView
            android:id="@+id/ringtone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acarisans_italic"
            android:textColor="@color/grey_500"
            android:textSize="15sp"
            tools:text="Zil Sesinin ismi" />
      
      </LinearLayout>
   
   </RelativeLayout>

</LinearLayout>


